{
    "compilerOptions": {
      "target": "ESNext",
      "moduleResolution": "node",
      "module": "ESNext",
      "strict": true,
      "alwaysStrict": true,
      "outDir": "./dist/esm",
      "declaration": true,
      "allowJs": true,
      "removeComments": false,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "lib": ["ES2021", "DOM"],
      "paths": {
        "~/*": ["./*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
  }
  