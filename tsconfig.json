{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "ESNext",
        "strict": true,
        "alwaysStrict": true,
        "outDir": "./dist",
        "declaration": true,
        // "declarationMap": true,
        "allowJs": true,
        // "noEmit": true ,   
        "removeComments": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
        ],
        "paths": {
            "~/*": ["./*"]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.ts",
    ]
}